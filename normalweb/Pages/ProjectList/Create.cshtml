@page
@model normalweb.Pages.ProjectList.CreateModel
@{
}


<br />

<h2> Create New Project </h2>

<br />


<div class="container border" style="padding:30px" >
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly">  </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Project.Name"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Name" class="form-control">
            </div>
            <span class="text-danger" asp-validation-for="Project.Name" ></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Project.Description"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Description" class="form-control">
            </div>
            <span asp-validation-for="Project.Description"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Project.Manager"> </label>
            </div>
            <div class="col-6">
                <input asp-for="Project.Manager" class="form-control">
            </div>
            <span asp-validation-for="Project.Manager"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4" >
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3" >
                <a asp-page="Index"  class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
   <partial name="_ValidationScriptsPartial" />
 }